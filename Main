from multiprocessing import Process
import random
import time
import math


def electricCentral () :
    global energy
    while True :
        time.sleep(1)
        energy += 40000



def Weather (beginningDay) :
    global sunIndex
    global windIndex
    global temperature
    day = beginningDay
    for i in range (732) :
        day += 1
        time.sleep(1)
        sunIndex = random.random()
        windIndex = random.random()
        temperature = 40*math.sin(day/365*math.pi) - 5
        print (temperature)
        if day == 365 :
            day = 0

